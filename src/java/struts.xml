<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" namespace="/" extends="struts-default">
        <action name="Login" class="com.exavalu.models.Users" method="doLogin">
            <result name="USER">automobileInsurance.jsp</result>
            <result name="ADMIN">index.jsp</result>
            <result name="FAILURE">login.jsp</result>
        </action>
        
        <action name="Logout" class="com.exavalu.models.Users" method="doLogout">
            <result name="SUCCESS">index.jsp</result>
        </action> 
        
        <action name="AddVehicleData" class="com.exavalu.models.Vehicle" method="addVehicleData">
            <result name="SUCCESS">automobileInsurance.jsp</result>
            <result name="FAILURE">login.jsp</result>
        </action> 
        
        <action name="AddInsurantData" class="com.exavalu.models.InsurantData" method="addInsurantData">
            <result name="SUCCESS">automobileInsurance.jsp</result>
            <result name="FAILURE">login.jsp</result>
        </action>  
    </package>
    
</struts>
